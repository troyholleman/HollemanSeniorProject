<h1>All Tasks</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Priority</th>
			<th>Deadline</th>
			<th>Comment</th>
		</tr>
	</thead>
	<tbody>
		<% @tasks.each do |task| %>
		<tr>
			<td><%= task.name %></td>
			<td><%= task.priority %></td>
			<td><%= task.deadline %></td>
			<td><%= task.comment %></td>
		</tr>
		<% end %>
	</tbody>
</table>
