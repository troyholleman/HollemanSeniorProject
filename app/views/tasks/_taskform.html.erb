
<div class="form">
	
	<div>
		<%= f.label :name %>
		<br />
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	
	<div>
		<%= f.label :priority %>
		<br/ >
		<label class="radio-inline">
		  <%= f.radio_button :priority, '3', :checked => true %>Low
	  </label>
		<label class="radio-inline">
		  <%= f.radio_button :priority, '2' %>Medium
	  </label>
		<label class="radio-inline">
		  <%= f.radio_button :priority, '1' %>High
	  </label>
	</div>
	
	<div>
		<%= f.label :deadline %>
		<br />
		<%= f.date_field :deadline, class: 'form-control' %>
	</div>
	
	<div>
		<%= f.label :comment %>
		<br />
		<%= f.text_area :comment, class: 'form-control remove-resize' %>
	</div>
	
	<div>
		<%= f.label :category_id %>
		<br />
		<%= f.select :category_id, @category_options, {}, class: 'form-control' %>
	</div>
	
	<div>
		<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
			<span>Save</span><i class="fa fa-check"></i>
		<% end %>
	</div>
	
</div>
